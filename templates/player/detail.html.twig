{% extends 'base.html.twig' %}

{% block title %}playerslist
{% endblock %}

{% block body %}
	<div class="container">
		<h1>{{player.firstname}}
		</h1>
		<div class="row">
			<div class="col-3">
				<img src="{{ asset('img/' ~ player.portrait) }}" class="img-fluid" alt="">
			</div>
			<div class="col-9">
				<h2>{{ player.firstname ~ ' ' ~ player.lastname }}</h2>
				<p>Birthday :
					{{ player.birthday | date('d/m/Y') }}</p>
				<p>Number :
					{{ player.number }}</p>
				<p>Team :
					{{ player.team.name }}</p>
				<p>Pays :
					{{ player.paye.name }}</p>
				<img src={{player.paye.drapeau}} alt={{player.paye.name}}>
				<p>
					<a href="{{url('players.index')}}" class="btn btn-success">Retour</a>
				</p>
			</div>
		</div>
	</div>
{% endblock %}
